mixin header(data)
	header.header
		.header__top
			.header__inner
				.header__logo
					+logo()
				
				.header__menu
					+main-menu(mainMenu.default)

				.header__github
					+github-button()
						
				.header__mobile-menu-trigger
					+mobile-menu-trigger()

				.clear

